🍄🍄 ( "assign by index then return array" ) ;
🍙 __array__assign = 🏨 ( array, index, value ) {
    🍙 cur_index = 0 ;
    🍙 return_array = [ ] ; 

    🌸 (
        🏨 () {  
            🐶 ( cur_index == index ) {
                🍙 return_array = 🥌 ( return_array, value ) ;
            } 😱 {
                🍙 return_array = 🥌 ( return_array, array [ 0 ] ) ;
            } ;
            🍙 array = 🌛 ( array ) ; 
            🍙 cur_index = cur_index + 1 ;
        },
        📏 ( array ) 
    ) ;

    💨 return_array ;
} ;

🍄🍄 ( "do for each for array" ) ;
🍙 __array__forEach = 🏨 ( array, closure ) {
    🍙 cur_index = 0 ;

    🌸 (
        🏨 () {
            closure ( array [ cur_index ], cur_index ) ;
            🍙 cur_index = cur_index + 1 ;
        },
        📏 ( array ) 
    ) ;
} ;

🍙 __array__map = 🏨 ( array, closure ) {
    🍙 cur_index = 0 ;

    🌸 (
        🏨 () {
            🍙 array = __array__assign ( array, cur_index, closure ( array [ cur_index ], cur_index ) ) ;
            🍙 cur_index = cur_index + 1 ;
        },
        📏 ( array ) 
    ) ;

    💨 array ;
} ;

🍄🍄 ( "sort number pair of array" ) ;
🍙 __array__sort = 🏨 ( array ) {
    🍙 i = 0 ;
    🍙 j = 0 ;

    🌸 (
        🏨 () {

            🍙 j = i + 1 ;

            🌸 (
                🏨 () {
                    🐶 (array [ i ] > array[ j ] ) {
				        🍙 tmp = array [ i ] ;
                        🍙 array = __array__assign ( array, i, array [ j ] ) ;
                        🍙 array = __array__assign ( array, j, tmp ) ;
			        }
                    🍙 j = j + 1 ;
                },
                📏 ( array ) - i - 1
            ) ;

            🍙 i = i + 1 ;
        },
        📏 ( array ) - 1
    ) ;

    💨 array ;
}